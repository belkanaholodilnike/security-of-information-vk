{
  "manifest_version": 2,

  "name": "SVkMessage",
  "description": "The extension allows to encrypt vk messages by unsymmetrical encryption.",
  "version": "0.1",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "images/security-medium.png",
    "default_popup": "popup.html",
    "default_title": "SVkMessage"
  },

  "content_scripts": [{
      "matches": ["http://vk.com/*"],
      "css": ["svkm.css"],
      "js": ["frame.js", "libVkInject.js", "secureInjection.js"],
      "run_at": "document_start",
      "all_frames": true
  }],

  "web_accessible_resources": [
    "frame.html",
    "frame.js",
    "svkm.css",
    "images/button_bgf.png"
  ],


  "permissions": [
    "tabs"
  ]
}
